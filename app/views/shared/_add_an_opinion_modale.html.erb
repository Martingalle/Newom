<div class="modal fade" id="add-an-opinion" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
      <div class="modal-body">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add your own opinion</h5>
            <%= simple_form_for opinion_new do |f| %>
              <%= f.input :name, label:false, placeholder: "Give a title (max 140 caracters)", class:"modal-input" %>
              <%= f.input :description, label:false, placeholder: "Describe your opinions", class:"modal-input" %>
              <p style="color: #b3b3b3;">Please select a genre</p>
              <%#= f.input_field :genre_id, collection: genres.map {|genre| [genre.name, genre.id ]}, class:"opinion-input-field"%>
              <%= f.input :genre_id, as: :select, collection: genres %>
              <%= f.button :submit, class: "button-small" %>
            <% end %>
        </div>
      </div>
  </div>
</div>
